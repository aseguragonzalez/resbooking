{
  "containerEnv": {
    "DEFAULT_HOST": "http://localhost:8080",
    "XDEBUG_MODE": "coverage,debug,develop"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "dbaeumer.vscode-eslint",
        "MehediDracula.php-namespace-resolver",
        "recca0120.vscode-phpunit",
        "xdebug.php-debug",
        "redhat.vscode-xml",
        "wongjn.php-sniffer"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/gvatsal60/dev-container-features/pre-commit:1": {}
  },
  "forwardPorts": [
    8080,
    9000,
    9003
  ],
  "image": "php:8.4-apache-bookworm",
  "mounts": [
    "source=${localWorkspaceFolder},target=/var/www/html,type=bind,consistency=cached"
  ],
  "name": "PHP 8.4 with Apache",
  "postCreateCommand": "bash deployment/scripts/setup-apache.sh && apache2ctl start",
  "remoteUser": "root"
}
