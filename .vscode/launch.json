{
  "configurations": [
    {
      "log": true,
      "name": "Listen for Xdebug",
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "port": 9003,
      "request": "launch",
      "type": "php",
      "xdebugSettings": {
        "max_children": 100,
        "max_data": 65535,
        "max_depth": 5,
        "show_hidden": 1
      }
    },
    {
      "args": [
        "${relativeFile}",
        "--filter",
        "${input:testMethodName}"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "XDEBUG_SESSION": "VSCODE",
        "XDEBUG_TRIGGER": "1"
      },
      "name": "Debug PHPUnit Current Test",
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "port": 9003,
      "program": "${workspaceFolder}/vendor/bin/phpunit",
      "request": "launch",
      "type": "php"
    },
    {
      "cwd": "${workspaceFolder}",
      "env": {
        "XDEBUG_SESSION": "VSCODE",
        "XDEBUG_TRIGGER": "1"
      },
      "name": "Debug Run Migrations",
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "port": 9003,
      "program": "${workspaceFolder}/src/Infrastructure/Ports/Migrations/index.php",
      "request": "launch",
      "type": "php"
    },
    {
      "args": [
        "--test=${input:migrationName}"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "XDEBUG_SESSION": "VSCODE",
        "XDEBUG_TRIGGER": "1"
      },
      "name": "Debug Test Migration",
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "port": 9003,
      "program": "${workspaceFolder}/src/Infrastructure/Ports/Migrations/index.php",
      "request": "launch",
      "type": "php"
    }
  ],
  "inputs": [
    {
      "description": "Enter the test method name (e.g., testCreateNewReservation)",
      "id": "testMethodName",
      "type": "promptString"
    },
    {
      "description": "Enter the migration name (e.g., 20260101000000)",
      "id": "migrationName",
      "type": "promptString"
    }
  ],
  "version": "0.2.0"
}
