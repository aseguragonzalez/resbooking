# MariaDB Environment Variables

# Copy these to your .env file and update with your actual values
# Root user password for MariaDB
MARIADB_ROOT_PASSWORD=root_password_here

# Migrations default database name to create
MARIADB_DATABASE=migrations

# Application database user
MARIADB_USER=migrations

# Application database user password
MARIADB_PASSWORD=user_password_here

# MariaDB service hostname (used by application)
# This should match the service name in docker-compose.yml
MARIADB_HOST=localhost
